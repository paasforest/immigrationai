[Unit]
Description=Immigration AI Backend
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/var/www/immigrationai/backend
ExecStart=/usr/bin/node dist/app.js
Restart=always
RestartSec=5
StandardOutput=append:/var/log/immigrationai-backend.log
StandardError=append:/var/log/immigrationai-backend.log
EnvironmentFile=/var/www/immigrationai/backend/.env

[Install]
WantedBy=multi-user.target
